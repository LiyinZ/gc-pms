{# admin user page #}
{% extends 'main.twig' %}
{% block title %}Your Users{% endblock %}

{% block content %}
    <main class="admin user">
        <h2>Your Users / Tenants</h2>
        <div class="pagination">
            <ul>
                <li><a class="disabled" href="javascript:void(0)"><</a></li>
                <li>
                    <ul>
                        <li><a class="active" href="javascript:void(0)">1</a></li>
                    </ul>
                </li>
                <li><a class="disabled" href="javascript:void(0)">></a></li>
            </ul>
        </div>
        <table class="table-minimal">
            <thead>
            <tr>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Update</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td><a href="user/{{ user.id|e }}">{{ user.first_name|e }}</a></td>
                    <td><a href="tel:{{ user.phone|e }}">{{ user.phone|e }}</a></td>
                    <td><a href="mailto:{{ user.email|e }}">{{ user.email|e }}</a></td>
                    <td>
                        {% if is_admin %}
                        <form action="/pms/delete/user/{{ user.id }}" method="post">
                            <input type="hidden" name="_METHOD" value="DELETE"/>
                            <button type="submit">Delete</button>
                        </form>
                            {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="pagination">
            <ul>
                <li><a class="disabled" href="javascript:void(0)"><</a></li>
                <li>
                    <ul>
                        <li><a class="active" href="javascript:void(0)">1</a></li>
                    </ul>
                </li>
                <li><a class="disabled" href="javascript:void(0)">></a></li>
            </ul>
        </div>
    </main>
{% endblock %}